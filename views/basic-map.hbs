{{!-- map  --}}
<div id="map"></div>
{{!-- Map search and filter menu --}}
<div id="map-view">
  <div id="geocoder" class="geocoder"></div>

  <div class="side-menu">
    <div class="toggle-collapse"><i class="fas fa-chevron-left"></i></div>
    <div class="layer-icon"><i class="fas fa-layer-group"></i></div>
    <div class="side-menu-content">
      <h6 class="subtitle is-6">Filters</h6>
      <nav id="menu"></nav>

      <hr>

      <h6 class="subtitle is-6">Share your map with a friend!</h6>
      <div class="share-url field has-addons">
        <div class="control control-input">
          <input class="input" type="url" id="current-url" value="">
        </div>
        <div class="control">
          <a class="button copy-url is-info" data-clipboard-target="#current-url">
            Copy
          </a>
        </div>
      </div>
    </div>
  </div>

  {{!-- Interactive data"s changes console --}}
  <div class=" side-menu-option">

    <div id="collisions-infobox">
      <div class="description">
        <h2>Motor vehicle collisions</h2>
        <p>Data: <a href="https://data.cityofnewyork.us/Public-Safety/NYPD-Motor-Vehicle-Collisions/h9gi-nx95">Motor
            vehicle
            collision injuries and deaths</a> in NYC, Apr 2019
        </p>
      </div>

      <div class="session casualty">
        <h2>Casualty</h2>
        <div class="row colors">
        </div>
        <div class="row labels">
          <div class="label">0</div>
          <div class="label">1</div>
          <div class="label">2</div>
          <div class="label">3</div>
          <div class="label">4</div>
          <div class="label">5+</div>
        </div>
      </div>


      <div class="session sliderbar" id="sliderbar">
        <h2>Hour: <label id="active-hour">12PM</label></h2>
        <input id="slider" class="row" type="range" min="0" max="23" step="1" value="12" />
      </div>

      <div class="session days">
        <h2>Day of the week</h2>
        <div class="row" id="filters">
          <input id="all" type="radio" name="toggle" value="all" checked="checked">
          <label for="all">All</label>
          <input id="weekday" type="radio" name="toggle" value="weekday">
          <label for="weekday">Weekday</label>
          <input id="weekend" type="radio" name="toggle" value="weekend">
          <label for="weekend">Weekend</label>
        </div>
      </div>
    </div>

  </div>
</div>

