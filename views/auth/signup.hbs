<div class="login-signup-page">
  <div class="card card-content">
    <h1 class="title is-3">Sign Up for Free!</h1>

    <form action="/auth/signup" method="POST" id="form-container-signup-page" enctype="multipart/form-data">
      <div class="field">
        <label for="photo" class="label">Profile picture</label>
        <div class="control">
          {{!-- <input type="file" name="photo" class="input"> --}}
          <div class="file">
            <label class="file-label">
              <input class="file-input" type="file" name="photo">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Choose a fileâ€¦
                </span>
              </span>
            </label>
          </div>
        </div>
      </div>
      <div class="field">
        <label for="username" class="label">Username</label>
        <div class="control">
          <input type="text" name="username" placeholder="JonSnow" class="input">
        </div>
      </div>

      <div class="field">
        <label for="password" class="label">Password</label>
        <div class="control">
          <input type="password" name="password" placeholder="Your password" class="input">
        </div>
      </div>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <div class="field is-grouped-right is-grouped">
        <div class="control">
          <button class="button is-primary">Create account</button>
        </div>
      </div>
    </form>
  </div>
</div>